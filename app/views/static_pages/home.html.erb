<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag("0.avif", class: "w-100", height: "650") %>
      <div class="carousel-caption">
          <div class="container">
              <div class="row d-flex justify-content-start text-center">
                 <div class="col-6 bg-custom d-none d-lg-block py-5 px-0 pl-5">
                    <h1>Princeless</h1>
                    <div class="border-top border-primary w-50 mx-auto my-3"></div>
                    <h3 class="pb-3">Complete Website Design</h3>
                    <%= link_to "Get Start", signup_path , class: "btn btn-first btn-lg" %>
                    <a href="#" class="btn btn-second btn-lg">View Now</a>
                 </div>
              </div>
          </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag("1.jpg", class: "w-100", height: "650") %>
      <div class="carousel-caption">
          <div class="container">
              <div class="row d-flex justify-content-center text-center">
                 <div class="col-6 bg-custom d-none d-lg-block py-5 px-0">
                    <h1>Princeless</h1>
                    <div class="border-top border-primary w-50 mx-auto my-3"></div>
                    <h3 class="pb-3">Complete Website Design</h3>
                    <%= link_to "Get Start", signup_path , class: "btn btn-first btn-lg" %>
                    <a href="#" class="btn btn-second btn-lg">View Now</a>
                 </div>
              </div>
          </div>
      </div>
    </div>
     <div class="carousel-item">
      <%= image_tag("1.webp", class: "w-100", height: "650") %>
      <div class="carousel-caption">
          <div class="container">
              <div class="row d-flex justify-content-end text-right">
                 <div class="col-6 bg-custom d-none d-lg-block py-5 px-0 pl-5">
                    <h1>Princeless</h1>
                    <div class="border-top border-primary w-50"></div>
                    <h3 class="pb-3">Complete Website Design</h3>
                    <%= link_to "Get Start", signup_path , class: "btn btn-first btn-lg" %>
                    <a href="#" class="btn btn-second btn-lg">View Now</a>
                 </div>
              </div>
          </div>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>